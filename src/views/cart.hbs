<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="text-center">Products in cart</h2>

            {{#if products}}
            {{#each products}}
            <div class="card store_card mx-auto mb-2">
                <div class="row no-gutters">
                    <!-- Product Details -->
                    <div class="col-md-8">
                        <div class="card-body py-2">
                            <h5 class="card-title text-sm">{{this.productId.title}}</h5>
                            <p class="card-text text-sm">{{this.productId.description}}</p>
                            <div class="row">
                                <div class="col">
                                    <p class="card-text text-sm">Price: ${{this.productId.price}}</p>
                                </div>
                                <div class="col">
                                    <p class="card-text text-sm">Code: {{this.productId.code}}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <p class="card-text text-sm">Stock: {{this.productId.stock}}</p>
                                </div>
                                <div class="col">
                                    <p class="card-text text-sm">Category: {{this.productId.category}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Quantity -->
                    <div class="col-md-3 d-flex align-items-center px-3">
                        <div class="row w-100">
                            <div class="col-9 d-flex align-items-center justify-content-between">
                                <form action="/api/carts/{{../user.cartId}}/product/{{this.productId._id}}/decrease"
                                    method="post">
                                    <button class="btn btn-light btn-sm mr-2" type="submit">-</button>
                                </form>
                                <span class="text-sm">{{this.quantity}}</span>
                                <form action="/api/carts/{{../user.cartId}}/product/{{this.productId._id}}/increase"
                                    method="post">
                                    <button class="btn btn-light btn-sm ml-2" type="submit">+</button>
                                </form>
                            </div>
                            <div class="col-3 text-center">
                                <form action="/api/carts/{{../user.cartId}}/product/{{this.productId._id}}"
                                    method="post">
                                    <button type="submit" class="btn btn-link p-0 border-0 bg-transparent">
                                        <i class="fas fa-trash-alt text-dark"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            {{else}}
            <div class="text-center"> No products in cart </div>
            {{/if}}
        </div>
    </div>

    <div class="row mt-2 mb-3">
        <div class="col text-center">
            <a href="/" class="btn btn-primary mr-2">Continue Shopping</a>
            <form action="/api/carts/{{user.cartId}}/purchase" method="post" class="d-inline">
                <button type="submit" class="btn btn-success">Checkout</button>
            </form>
        </div>
    </div>

    <a href="/chat" class="btn btn-primary rounded-circle p-0 shadow d-flex justify-content-center align-items-center"
        style="position: fixed; bottom: 20px; right: 20px; width: 60px; height: 60px;">
        <i class="fas fa-comments text-white" style="font-size: 24px;"></i>
    </a>
</div> --}}

<div>
    <h1 class="text-5xl">Carrito {{cid}}</h1>
    <section class="flex">
        {{#each products}}
            <div class="bg-white drop-shadow-xl my-3 w-[330px] h-[600px] flex flex-col rounded-[20px] ">
                <img src="{{this._id.thumbnails.[1]}}" class="h-3/5 rounded-b-[50px] rounded-t-[20px] border-2" alt="">
                <div class="h-2/5 p-5 flex flex-col gap-2 text-center justify-center">
                    <h2 class="font-bold">{{this._id.title}}</h2>
                    <p>{{this._id.description}}</p>
                    <div class="flex text-center gap-1 mb-2">
                        <p class="w-2/4 p-1 bg-rose-200 rounded-[50px] drop-shadow-md">Code: {{this._id.code}}</p>
                        <p class="w-2/4 p-1 bg-rose-200 rounded-[50px] drop-shadow-md">Price: ${{this._id.price}}</p>
                    </div>
                    <div class="flex text-center gap-1">
                        <p class="w-2/4 p-1 bg-rose-200 rounded-[50px] drop-shadow-md">Quantity: {{this.quantity}}</p>
                        <p class="w-2/4 p-1 bg-rose-200 rounded-[50px] drop-shadow-md">Stock: {{this._id.stock}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </section>
    <form action="http://localhost:8080/api/cart/{{cid}}/purchase" method="post">
        <button class="bg-pink-600 text-white p-2 m-2 rounded-lg" type="submit" class="bg-white hover:bg-black hover:text-white drop-shadow-md border-2 border-black rounded-[50px] m-2 p-2 w-2/4 self-center">COMPRAR</button>
    </form>
    <a class="bg-pink-600 text-white p-2 m-2 rounded-lg" href="http://localhost:8080/api/products">volver a productos</a>
</div>